<%= render partial: 'layouts/errors', locals: { object: @client } %>
<%= form_for @client, :url => url_for(:controller => 'clients', :action => 'update_progress') do |f| %>
  <%= f.label :weight, "Enter Your Client's Current Weight:" %>
  <br></br>
  <%= f.number_field :weight %>
  <br></br>
  <%= f.fields_for :appointments, @client.appointments.last do |app| %>
    <%= app.label :date, "Schedule Next Appointment:" %>
    <br></br>
    <%= app.datetime_select :date, order: [:month, :day, :year, :hour], ampm: true %>
  <% end %>
  <br></br>
  <%= f.submit %>
<% end %>
