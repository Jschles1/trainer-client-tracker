<%= render partial: 'layouts/errors', locals: { object: @user } %>
<h1>New Account Form:</h1>
<br></br>
<%= form_for @user do |f| %>
  <%= f.label :name, "Enter Your Name:" %>
  <br></br>
  <%= f.text_field :name %>
  <br></br>
  <%= f.label :email, "Enter Your Email:" %>
  <br></br>
  <%= f.text_field :email %>
  <br></br>
  <%= f.label :password, "Password (Must be at least 8 char.):" %>
  <br></br>
  <%= f.password_field :password %>
  <br></br>
  <%= f.submit "Create Account" %>
<% end %>
